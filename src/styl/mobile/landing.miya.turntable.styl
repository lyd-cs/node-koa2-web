.landing-miya-turntable
  $turntable-bg = #FB7390
  $button-countdown-bg = #CCC
  $result-info-color = #D64141
  $result-success-bg = #FF758F
  $result-success-download = #EA5571
  $result-times-color = #ccc
  $result-password-color = #A29492
  $rate-color = #FF415C
  $rate-tips-color = #ff556c
  $exchange-btn-bg = #4B46FF
  $degree-bg = #F94A49
  $eight-tip-color = #F5A707
  $shade-bg = #000
  background: $turntable-bg
  position: relative
  padding-top: .625rem
  .landing-register-toast-notify
    position: fixed
    z-index: 700
  &-result-height
    height: 100%
  &-body
    width: 100%
    padding: 0
    margin: 0 auto
    min-height: 100%
    overflow-x: hidden
    overflow-y: scroll
  &-success
    background-color: $result-success-bg
    min-height: 100%
    position: relative
    overflow: hidden
    .landing-miya-first-invest-top
      margin: 0 auto 2.5rem
    .turntable
      &-result-info
        position: absolute
        top: 48%
        left: 50%
        transform: translate(-50%,-50%)
        z-index: 999
        font-size: 0.938rem
        color: $result-info-color
        text-align: center
        line-height: 1.282rem
        width: 56%
        p  
          margin-top: 1.25rem
          font-size: .875rem
          .eight-tip
            color: $eight-tip-color
        .result-prize-show
          text-align: center
        .icon-prizes
          height: 3.43rem
          display: inline-block
        .icon-prizes-six
          width: 4.813rem
          background: url('/img/mobile/landing-miya-turntable-result-six.png') no-repeat top center
          background-size: contain
        .icon-prizes-eight
          width: 10.625rem
          background: url('/img/mobile/landing-miya-turntable-result-eight-0627.png') no-repeat top center
          background-size: contain
      &-result-tips
        overflow: hidden
        margin-top: 20%
      &-result-light
        position: relative
        width: 100%
        overflow: hidden
        padding-bottom: 26rem
      &-result-buiss
        width: 100%
        position: relative
        overflow: hidden
        margin-top: -4%
      &-result-buiss-title
        text-align: center
        padding: .438rem 0
        background: url('/img/mobile/landing-miya-turntable-result-title-bg.png') no-repeat center top
        background-size: contain
        width: 80%
        margin: 0 auto
        p  
          font-size: .938rem
          margin-top: 1.3rem
          color: $white-color
          text-align: center
      &-result-position
        text-align: center
        margin-bottom: 2.313rem
        img  
          width: 90%
      &-result-arrow
        width: 1.25rem
        height: 1.32rem
        margin: 0 auto
        background-size: contain
        z-index: 600
        animation: downArrow 2s infinite
      &-result-light-img
        position: absolute
        width: 100%
        background: no-repeat 50% 50%
        background-size: cover
        animation-timing-function: linear
        animation-iteration-count: infinite
        animation-duration: 3s
        opacity: 1
        pointer-events: none
      &-result-light-one
        animation-name: light-one
        z-index: 3
      &-result-light-two
        animation-name: light-two
        z-index: 2
      &-success-download
        position: fixed
        bottom: 0
        z-index: 9999
        left: 0
        right: 0
        height: 2.75rem
        background: url('/img/mobile/landing-miya-turntable-download-btn.png') no-repeat bottom center
        background-size: 100%
        img   
          width: 100%
  &-success-image
    position: absolute
    top: 0
    width: 100%
    img 
      width: 100%
  .hide
    display: none
  .financial-title
    background: url('/img/mobile/landing-miya-turntable-title-mother.png') no-repeat top center
    background-size: contain
  .safety-title
    background: url('/img/mobile/landing-miya-turntable-title-safe.png') no-repeat top center
    background-size: contain
  .prizes-six
    background: url('/img/mobile/landing-miya-turntable-exchange-bg-six-0626.png') no-repeat top center
    background-size: 100% auto
  .prizes-eight
    background: url('/img/mobile/landing-miya-turntable-exchange-bg-eight-0626.png') no-repeat top center
    background-size: 100% auto
  .register-six
    background: url('/img/mobile/landing-miya-turntable-register-six-0626.png') no-repeat top center
    background-size: 100% auto
  .register-eight
    background: url('/img/mobile/landing-miya-turntable-register-eight-0626.png') no-repeat top center
    background-size: 100% auto
  .goods-draw
    font-size: 1.063rem
    color:  $white-color
    letter-spacing: 1px
    text-align: center
    text-shadow: 0 0 10px rgba(0,0,0,0.11)
  .degree
    color: $degree-bg
  .form
    &-sms-password
      clearfix()
    &-tips
      font-size: .75rem
      color:  $white-color
      margin-bottom: .625rem
    &-edit
      font-size: .75rem
      color: $exchange-btn-bg
      padding-left: .32rem
    &-close
      width: 1.563rem
      height: 1.563rem
      background: url('/img/mobile/landing-miya-turntable-exchange-close.png') no-repeat top center
      background-size: contain
      position: absolute
      right: 10%
      top: -2%
  .exchange
    &-mobile
      padding: 0 .938rem
      color: $grey-color-dark
    &-prizes-wrap
      width: 68%
      margin: 0 auto
      margin-top: 64%
      position: relative
    &-opera
      width: 100%
      height: 2.75rem
      line-height: 2.75rem
      border-radius: .2rem
      margin-bottom: 1rem
      border: none
    &-goods
      background-image: linear-gradient(-180deg, #7A78FF 8%, #4B46FF 95%)
    &-draw
      background-image: linear-gradient(-180deg, #FFE656 0%, #FAA100 100%)
    &-times
      background: $result-times-color
    &-smscode
      float: left
      padding-left: 1rem
      width: 56%
      height: 2.7rem
      font-size: .938rem
    &-countdown
      float: right
      background-image: linear-gradient(-180deg, #7A78FF 8%, #4B46FF 95%)
      height: 2.7rem
      width: 40%
      padding: 0
      font-size: .938rem
      line-height: 2.75rem
      color: $white-color
      box-shadow: 0 0.156rem 0.78rem 0 rgba(181,0,0,0.19)
      &[disabled]
        background: $button-countdown-bg
    &-countdown-gray
      background: $result-times-color
    &-password
      padding-left: 1rem
      width: 100%
      height: 2.7rem
      font-size: .938rem
      color: $result-password-color
    &-current
      border-radius: 0.19rem
      line-height: normal
      border: none
      margin-bottom: 1rem
  .turntable
    &-signform
      position: relative
    &-title
      background: url('/img/mobile/landing-miya-turntable-bg-0628.png') no-repeat top center
      height: 15.906rem
      background-size: contain
    &-active
      width: 90%
      height: auto
      position: relative
      top: -3rem
      background: url('/img/mobile/landing-miya-turntable-light.png') no-repeat top center
      background-size: contain
      margin: 0 auto
      padding-top: .1rem
      padding-bottom: 7.8rem
    &-prize
      margin: 0 auto
      width: 89%
      height: auto
      margin: 0 auto
      margin-top: 1rem
      margin-bottom: 1rem
      img
        pointer-events: none
        transform: rotate(340deg)
        transform-origin: 50% 50% 0px
    &-exchange-prizes
      position: absolute
      //position: fixed
      left: 0
      right: 0
      top: 4%
      bottom: 0
      margin: 0 auto
      z-index: 600
    &-notice
      position: absolute
      top: 0
      width: 10.6rem
      left: -.88rem
      text-align: center
      &-wrap
        background: rgba(5,5,5,0.42)
        border-radius: 100px
        height: 2.188rem
        overflow: hidden
        margin-top: .25rem
        ul
          margin: 0
          padding: 0
        li
          font-size: .625rem
          color: $white-color
          text-align: center
          line-height: .86rem
          list-style-type: none
          padding: 0 .45rem
          clearfix()
    &-content-title
      height: 1.563rem
      margin-top: 0
      margin-bottom: 1.8rem
    &-content-title-safety
      margin-top: 2.8rem
      margin-bottom: 1.2rem
    &-phone
      color: $white-color
      padding: 1.125rem 0.8rem
      font-size: 0.8125rem
      text-align: center
      opacity: .8
      p:before
        content: ''
        display: inline-block
        vertical-align: middle
        margin-bottom: .1rem
        margin-right: .5rem
        width: 1.125rem
        height: 1.125rem
        background: url('/img/mobile/landing-miya-turntable-phone.png') no-repeat center top
        background-size: contain
    &-cliente
      display: flex
      width: 100%
      margin: 0 auto 2rem
      text-align: center
      &-wrap
        flex: 1
        &:before
          content: ''
          display: block
          height: 6.282rem
      .deposit:before
        background: url('/img/mobile/landing-miya-turntable-deposit.png') no-repeat top center
        background-size: contain
      .sign:before
        background: url('/img/mobile/landing-miya-turntable-sign.png') no-repeat top center
        background-size: contain
      .business:before
        background: url('/img/mobile/landing-miya-turntable-business.png') no-repeat top center
        background-size: contain
      .union:before
        background: url('/img/mobile/landing-miya-turntable-union.png') no-repeat top center
        background-size: contain
      p 
        font-size: .75rem
        color: $white-color
        text-align: center
        margin-top: 0
        margin-bottom: 0
    &-financial
      overflow: hidden
    &-plan-item
      width: 90%
      height: 5.8rem
      background: url('/img/mobile/landing-miya-turntable-plan-bg.png') no-repeat top center
      background-size: contain
      margin: 0 auto
      text-align: center
      padding: 0 1.6rem
      margin-bottom: 1.25rem
      clearfix()
      .item
        &-rate
          float: left
          position: relative
          font-size: 1.563rem
          color: $rate-color
          line-height: 1.563rem
          &-extra
            display: inline-block
            font-size: .782rem
        &-tip
          position: absolute
          font-size: .563rem
          line-height: .7rem
          color: $rate-tips-color
          border: 1px solid $rate-tips-color
          border-radius: .437rem .5rem .5rem 0
          padding: .18rem .313rem
          right: -2rem
          top: .8rem
        &-money
          float: right
        &-cycle 
          margin: 0 auto
          width: 10rem
        &-desc
          font-size: .688rem
          color: rgba(5,5,5,0.48)
          line-height: .7rem
        &-show
          font-size: 1rem
          color: $grey-color-dark
      .show-info
        height: 1.563rem
        line-height: 1.563rem
        margin-bottom: .262rem
        margin-top: 1.8rem
    &-show
      width: 90%
      margin: 1rem
      position: relative
      top: -3rem
      pointer-events: none
    &-exchange
      width: 90%
      margin: 0 auto
      position: relative
      top: -2.4rem
    &-time
      float: left
      line-height: 2.188rem
    &-win-info
      float: right
      width: 70%
      margin-top: .3rem
    &-winners
      font-size: .625rem
      color: $white-color
      line-height: .7rem
      text-align: left
      padding-left: 0.33rem
    &-point
      width: 30%
      position: absolute
      margin: 0 auto
      top: 20%
      left: 0
      right: 0
      .go-point
        animation: shake infinite 1.2s
        text-align: center
        position: absolute
        top: 3.9rem
        width: 3.375rem
        height: 2rem
        left: 0
        right: 0
        bottom: 0
        margin: 0 auto
        background: url('/img/mobile/landing-miya-turntable-go.png') no-repeat top center
        background-size: contain
    &-shade
      position: absolute
      //position: fixed
      z-index: 500
      left:0
      top:0
      right:0
      bottom:0
      background: $shade-bg
      opacity: .7
      overflow: hidden
  img
    width: 100%
  .lottery-draw
    position: absolute
    top: 5.8rem
    left: 0
    right: 0
    bottom: 0
    margin: 0 auto
    font-size: .625rem
    color: $white-color
    text-align: center
    opacity: .8
@keyframes shake {
  0%, 50%, 60%, 70%, 80%, 90%, 100% {
    transform: translateX(0)
  }
  10%,
  30%{
    transform: translateX(-5px)
  }
  20%,
  40% {
    transform: translateX(5px)
  }
}
@keyframes light-one {
    0%,
    20%,
    40%,
    60%,
    80%,
    100% {
        opacity: 1
    }
    10%,
    30%,
    50%,
    70%,
    90%{
        opacity: 0
    }
}

@keyframes light-two {
    0%,
    20%,
    40%,
    60%,
    80%,
    100% {
        opacity: 1
    }
    10%,
    30%,
    50%,
    70%,
    90%{
        opacity: 1
    }
}

@keyframes downArrow{
  from {
    background: url('/img/mobile/about-annals-2017-arrow1.png') center center no-repeat
    background-size: contain
  }
  to {
    background: url('/img/mobile/about-annals-2017-arrow2.png') center center no-repeat
    background-size: contain
  }
}